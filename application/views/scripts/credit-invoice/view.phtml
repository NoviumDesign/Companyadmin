            $discount = (float)$this->invoice['discount'];
            $totVat = 0;
            foreach($this->items as $item) {
               $price = (float)$item['price'];
               $quantity = (float)$item['quantity'];
               $vat = (0.01*(float)$item['vat']);

               $totVat += $quantity*$price*(1 - $discount/$totPrice)*$vat;
            }
         ?>

         <tr class="space">
            <td colspan="4"></td>
         </tr>

         <tr>
            <td colspan="2"></td>
            <td>
               <strong>Sum</strong>
